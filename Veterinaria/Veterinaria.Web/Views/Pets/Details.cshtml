@model Veterinaria.Web.Models.Pet

@{
    ViewBag.Title = "Details";
}

<div class="row col-md-12 justify-content-center">
    <div class="col-md-5">
        <div class="card mb-3">
            <div class="card-header py-2 bg-dark">
                <h5 class="text-center text-white m-0">@Model.Name</h5>
            </div>
            <div class="card-body">
                <table class="table table-sm">
                    <tr>
                        <td>Nombre: </td>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <td>Tipo de Mascota: </td>
                        <td>@Model.PetType</td>
                    </tr>
                    <tr>
                        <td>Edad: </td>
                        <td>@Model.Age Meses</td>
                    </tr>
                    <tr>
                        <td>Fecha De Nacimiento: </td>
                        <td>@Model.BirthDate.ToShortDateString()</td>
                    </tr>
                    <tr>
                        <td>Raza: </td>
                        <td>@Model.Race</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-5">
        <div class="">
            <div class="card mb-3">
                <div class="card-header bg-dark">
                    <h6 class="text-white">Fotografia</h6>
                </div>
                <div class="card-header">
                    @if (Model.ImgUrl==null)
                    {
                        <img src="~/Content/img/UserUnknown.jpg" class="img-thumbnail" width="550"/>
                    }
                    else if (Model.ImgUrl!=null)
                    {
                        <img src="~/Content/img/@Model.ImgUrl" alt="Alternate Text" width="450"/>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
