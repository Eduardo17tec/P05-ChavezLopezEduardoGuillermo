@model IEnumerable<Veterinaria.Web.Models.Consult>

@{
    ViewBag.Title = "Index";
}

<h2>Consultas</h2>

<a href="@Url.Action("Create","Consults")" class="btn btn-sm btn-success">
    <span class="text-white-50"><i class="fas fa-plus-circle"></i></span>
    <span class="text-white">Añadir nueva consulta</span>
</a>
<table class="table table-dark">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ConsultDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConsultType)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ConsultDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ConsultType)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
